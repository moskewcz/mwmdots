alias dus='du -shm'
alias dusa='du -shm *'
alias ll='ls -l'
alias la='ls -A'
alias l='ls -CF'
alias ssh='ssh -X'

alias fix_capslock_led='xmodmap -e "clear lock" -e "add lock = Caps_Lock"'
alias pwgen_with_opts='pwgen -cnysB'

# git aliases and completion support for bash
